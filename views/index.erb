<% @list_items.each_with_index do |item, index| %>
  <article <%= 'class="complete"' if item.complete %>>
    <h1>Item <%= index + 1 %></h1>

    <p>
      <%= item.description %>
      <span><a href="/<%= item.description %>">[edit]</a></span>
    </p>
    <p class="links">
      <label>Delete <input type="checkbox" id="cbox1" value="first_checkbox"></label><br>
    </p>
    <p class="meta">Priority: <%= item.priority != nil ? item.priority : "N/A" %></p>
  </article>
<% end %>
